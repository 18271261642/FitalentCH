<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_12"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_12"
    app:shape_radius="@dimen/dp_20"
    app:shape_solidColor="@color/white">

    <ImageView
        android:id="@+id/itemSportTypeImg"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_type_outdoor_run_normal" />

    <TextView
        android:id="@+id/itemSportTypeNameTv"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="室外跑"
        android:layout_marginTop="@dimen/dp_3"
        android:textColor="#d6d6dd"
        android:textSize="@dimen/sp_12" />

</com.hjq.shape.layout.ShapeLinearLayout>