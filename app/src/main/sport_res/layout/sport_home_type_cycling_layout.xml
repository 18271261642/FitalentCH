<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        app:shape_solidColor="@color/white"
        app:shape_radius="@dimen/dp_15"
        android:layout_margin="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <com.bonlala.fitalent.view.NaviTxt
                android:id="@+id/sportTypeCyclingLastTotalDisTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="#4DDA64"
                android:layout_gravity="center"
                android:text="--"/>

            <TextView
                android:id="@+id/sportTypeCyclingLastTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#6e6e77"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.bonlala.fitalent.view.NaviTxt
                android:id="@+id/sportTypeCyclingTotalDisTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="#2F2F33"
                android:layout_gravity="center"
                android:text="--"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计里程"
                    android:textColor="#6e6e77"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_right_sport"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>

    </com.hjq.shape.layout.ShapeLinearLayout>


</LinearLayout>