<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"

    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_radius_shap"
        android:paddingBottom="@dimen/dp_10"
        android:orientation="vertical">


        <com.hjq.bar.TitleBar
            android:id="@+id/exerciseDialogBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rightIcon="@mipmap/ic_sport_filter"
            app:title="@string/string_exercise_record"
            app:lineVisible="true"
            app:leftIcon="@drawable/ic_black_back"
            app:titleColor="#000000" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exerciseFilterRy"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_5"
        android:padding="@dimen/dp_5"

        android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>