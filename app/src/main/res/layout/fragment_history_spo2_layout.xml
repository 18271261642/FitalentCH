<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_20"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/stepDayLayout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/string_day"
                    android:textColor="#ff676767"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/stepDayView"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:background="#67E08E" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/stepWeekLayout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/string_week"
                    android:textColor="#ff676767"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/stepWeekView"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:background="#67E08E" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stepMonthLayout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/string_month"
                    android:textColor="#ff676767"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/stepMonthView"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:background="#67E08E" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stepYearLayout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/string_year"
                    android:textColor="#ff676767"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/stepYearView"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:background="#67E08E" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="#DBDBDB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">


                        <com.hjq.shape.view.ShapeView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            app:shape_solidColor="#FF4EDD7D"
                            app:shape_radius="@dimen/dp_5"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/string_spo2_nomal"
                            android:textColor="#ff6e6e77"
                            android:textSize="12sp"
                            android:layout_marginStart="@dimen/dp_10"/>
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_0_1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">


                        <com.hjq.shape.view.ShapeView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            app:shape_solidColor="#FFFF7F72"
                            app:shape_radius="@dimen/dp_5"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/string_spo2_abnormal"
                            android:textColor="#ff6e6e77"
                            android:textSize="12sp"
                            android:layout_marginStart="@dimen/dp_10"/>
                    </LinearLayout>


                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1" />


                </LinearLayout>


            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.bonlala.fitalent.view.CusSpo2LineGridView
                    android:id="@+id/historySpo2BgView"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_height="match_parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/historySpo2RecyclerView"
                    android:layout_width="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_height="match_parent"/>

            </FrameLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_57"
        android:background="#CFCFCF" />


    <include
        android:visibility="invisible"
        layout="@layout/common_history_bot_date_layout" />


</LinearLayout>