<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:layout_margin="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/itemHomeBpImgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:src="@mipmap/ic_home_sport_record_img"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/string_exercise_record"
                android:textColor="#ff000000"
                android:textSize="16sp"

                app:layout_constraintBottom_toBottomOf="@id/itemHomeBpImgView"
                app:layout_constraintLeft_toRightOf="@id/itemHomeBpImgView"
                app:layout_constraintTop_toTopOf="@id/itemHomeBpImgView" />


            <TextView
                android:id="@+id/homeHrBeltDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:text="May 30,2022"
                android:textColor="#ff5e5e5e"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/itemHomeBpImgView"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/itemHomeBpImgView" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:orientation="horizontal">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/wallTempImg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:src="@mipmap/icon_sport_record_time"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/wallTempTimeTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/string_total_times"
                    android:textColor="#ff000000"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/wallTempImg1"
                    app:layout_constraintLeft_toRightOf="@+id/wallTempImg1"
                    app:layout_constraintTop_toTopOf="@+id/wallTempImg1" />


                <TextView
                    android:id="@+id/itemHomeWallTimesTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="--"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@id/wallTempTimeTv1"
                    app:layout_constraintTop_toBottomOf="@id/wallTempTimeTv1" />


                <ImageView
                    android:id="@+id/wallTempDuringIg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@mipmap/icon_sport_record_times"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/itemHomeWallTimesTv" />


                <TextView
                    android:id="@+id/wallTempDurationTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/string_total_duration"
                    android:textColor="#ff000000"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/wallTempDuringIg1"
                    app:layout_constraintLeft_toRightOf="@+id/wallTempDuringIg1"
                    app:layout_constraintTop_toTopOf="@+id/wallTempDuringIg1" />


                <TextView
                    android:id="@+id/itemWallDurationTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="--"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/wallTempDurationTv1"
                    app:layout_constraintTop_toBottomOf="@+id/wallTempDurationTv1" />


            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/wallTempAvgImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:src="@mipmap/icon_sport_record_avg_hr"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/wallTempAvgTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/string_avg_hr"
                    android:textColor="#ff000000"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/wallTempAvgImg"
                    app:layout_constraintLeft_toRightOf="@+id/wallTempAvgImg"
                    app:layout_constraintTop_toTopOf="@+id/wallTempAvgImg" />


                <TextView
                    android:id="@+id/itemHomeWallAvgTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="--"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@id/wallTempAvgTv1"
                    app:layout_constraintTop_toBottomOf="@id/wallTempAvgTv1" />


                <ImageView
                    android:id="@+id/wallTempDuringIg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@mipmap/icon_sport_record_kcal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/itemHomeWallAvgTv" />


                <TextView
                    android:id="@+id/wallTempKcalTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/string_kcal"
                    android:textColor="#ff000000"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/wallTempDuringIg2"
                    app:layout_constraintLeft_toRightOf="@+id/wallTempDuringIg2"
                    app:layout_constraintTop_toTopOf="@+id/wallTempDuringIg2" />


                <TextView
                    android:id="@+id/itemWallKcalTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="--"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/wallTempKcalTv1"
                    app:layout_constraintTop_toBottomOf="@+id/wallTempKcalTv1" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>