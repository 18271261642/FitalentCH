<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/bpScheduleHBpTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:text="119"
        android:textColor="#ff000000"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/bpScheduleHbpImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:src="@mipmap/ic_height_bp_shedule_img"
        app:layout_constraintBottom_toBottomOf="@id/bpScheduleHBpTv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bpScheduleHBpTv"
        app:layout_constraintTop_toTopOf="@id/bpScheduleHBpTv" />

    <ImageView
        android:id="@+id/bpScheduleHScaleImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_bp_scale_img"
        app:layout_constraintLeft_toLeftOf="@id/bpScheduleHbpImg"
        app:layout_constraintTop_toBottomOf="@id/bpScheduleHbpImg" />

</androidx.constraintlayout.widget.ConstraintLayout>