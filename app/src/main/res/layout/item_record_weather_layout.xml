<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_5"
    android:layout_height="wrap_content">




    <TextView
        android:id="@+id/itemRecordWeatherScopeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23℃ ~ 36℃"
        android:textColor="#ff2f2f33"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



    <ImageView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:id="@+id/itemRecordWeatherImgView"/>


    <View
        android:id="@+id/wTempV"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/itemRecordWeatherImgView"
        app:layout_constraintBottom_toBottomOf="@id/itemRecordWeatherImgView"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textColor="#ff2f2f33"
        android:textSize="18sp"
        android:id="@+id/itemRecordWeekTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/wTempV"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/itemRecordWeatherDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aug 23"
        android:textColor="#ff2f2f33"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/wTempV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>