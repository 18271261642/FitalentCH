<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_20"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/stepDayLayout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/string_day"
                    android:textColor="#ff676767"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/stepDayView"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:background="#67E08E" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/stepWeekLayout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/string_week"
                    android:textColor="#ff676767"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/stepWeekView"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:background="#67E08E" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stepMonthLayout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/string_month"
                    android:textColor="#ff676767"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/stepMonthView"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:background="#67E08E" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stepYearLayout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/string_year"
                    android:textColor="#ff676767"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/stepYearView"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:background="#67E08E" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="#DBDBDB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/string_avg_hr"
                            android:textColor="#ff6e6e77"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/historyAvgTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="999"
                            android:textColor="#ff000000"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:text="bpm"
                            android:textColor="#ff6e6e77"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:text="@string/string_max_hr"
                            android:textColor="#ff6e6e77"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/historyMaxHrTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="999"
                            android:textColor="#ff000000"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:text="bpm"
                            android:textColor="#ff6e6e77"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/string_min_hr"
                            android:textColor="#ff6e6e77"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/historyMinHrTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="999"
                            android:textColor="#ff000000"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="bpm"
                            android:textColor="#ff6e6e77"
                            android:textSize="12sp" />
                    </LinearLayout>


                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/historySleepThumbImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:src="@mipmap/ic_hr_humb"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/detailHeartView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_10" />

                <TextView
                    android:id="@+id/sleepNoDataTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_no_data"
                    android:textColor="#ff6e6e77"
                    android:textSize="13sp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </FrameLayout>




        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_57"
        android:background="#CFCFCF" />


    <include layout="@layout/common_history_bot_date_layout" />


</LinearLayout>