<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:shape_radius="@dimen/dp_15"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dp_5"
    android:padding="3dp"
    app:shape_solidColor="@color/white"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_time_ratio"
        android:textColor="#ff000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>


    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/hrDialogChart"
            android:layout_width="@dimen/dp_140"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_height="@dimen/dp_140"
            android:layout_margin="@dimen/dp_10" />


        <View
            android:layout_width="20dp"
            android:layout_height="@dimen/dp_0_1"/>

        <com.bonlala.fitalent.view.CusHrDescView
            android:id="@+id/hrDescView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="3dp" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:text="@string/string_hr_zone"
        android:textColor="#ff000000"
        android:textSize="14sp" />

        <com.bonlala.fitalent.view.HrDescByAgeView
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_15"
                android:orientation="horizontal">


                <com.hjq.shape.view.ShapeView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center"
                    app:shape_radius="@dimen/dp_5"
                    app:shape_solidColor="#FFFF0000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="Extreme anaerobic >179bpm"
                    android:textColor="#ff6e6e77"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_15"
                android:orientation="horizontal">


                <com.hjq.shape.view.ShapeView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center"
                    app:shape_radius="@dimen/dp_5"
                    app:shape_solidColor="@color/hr_color_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="Fat Burning Endurance 119-138bpm"
                    android:textColor="#ff6e6e77"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_15"

                android:orientation="horizontal">


                <com.hjq.shape.view.ShapeView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center"
                    app:shape_radius="@dimen/dp_5"
                    app:shape_solidColor="@color/hr_color_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="Strength enhancement 159-178bpm"
                    android:textColor="#ff6e6e77"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_15"
                android:orientation="horizontal">


                <com.hjq.shape.view.ShapeView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center"
                    app:shape_radius="@dimen/dp_5"
                    app:shape_solidColor="@color/hr_color_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="Warm up recovery 90-118bpm"
                    android:textColor="#ff6e6e77"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_15"
                android:orientation="horizontal">


                <com.hjq.shape.view.ShapeView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center"
                    app:shape_radius="@dimen/dp_5"
                    app:shape_solidColor="@color/hr_color_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="Marathon-based aerobic 139-158bpm"
                    android:textColor="#ff6e6e77"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_15"
                android:orientation="horizontal">


                <com.hjq.shape.view.ShapeView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center"
                    app:shape_radius="@dimen/dp_5"
                    app:shape_solidColor="@color/hr_color_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="Rest ï¼œ98bpm"
                    android:textColor="#ff6e6e77"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/dialogHrOkTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="5dp"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_5"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:shape_radius="@dimen/dp_15"
        app:shape_solidColor="#4EDD7D" />

    </LinearLayout>
</com.hjq.shape.layout.ShapeLinearLayout>