<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_400"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:shape_radius="@dimen/dp_10"
    android:layout_gravity="center"
    android:padding="@dimen/dp_8"
    app:shape_solidColor="#F4F6FA">

    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_radius="@dimen/dp_10"
        android:padding="3dp"
        android:layout_margin="@dimen/dp_8"
        app:shape_solidColor="@color/white"
        android:orientation="vertical">


    <TextView
        android:id="@+id/dialogDescTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:layout_margin="@dimen/dp_5"
        android:text="@string/string_sleep_desc1"
        android:textColor="#ff101d37"
        android:textSize="14sp" />


    </com.hjq.shape.layout.ShapeLinearLayout>


    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/sleepDescOkTv"
        app:shape_solidColor="#4EDD7D"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:text="OK"
        android:paddingStart="@dimen/dp_40"
        android:paddingEnd="@dimen/dp_40"
        android:paddingTop="5dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_5"
        app:shape_radius="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</com.hjq.shape.layout.ShapeLinearLayout>