<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/dp_8"
    android:layout_gravity="center"
    android:background="@color/transparent">


    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="@dimen/dp_350"
        android:layout_height="match_parent"
        android:gravity="center"
        app:shape_solidColor="@color/white"
        app:shape_radius="@dimen/dp_15"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_5"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_3">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/calendarPreviewImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:src="@mipmap/ic_calendar_left" />

                    <TextView
                        android:id="@+id/calendarMonthTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:text="2020-02"
                        android:textColor="#ff101d37"
                        android:textSize="14sp" />


                    <ImageView
                        android:id="@+id/calendarNextImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:src="@mipmap/ic_calendar_right" />
                </LinearLayout>


                <com.hjq.shape.view.ShapeTextView
                    android:id="@+id/calendarCurrentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="@string/string_back_today"
                    android:textColor="@color/white"
                    app:shape_radius="@dimen/dp_15"
                    app:shape_solidColor="#4EDD7D" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0_1"
                android:layout_marginTop="@dimen/dp_3"
                android:background="#E7E8EB" />

                <com.haibin.calendarview.CalendarView
                    android:id="@+id/commonCalendarView"
                    android:layout_width="wrap_content"
                    app:calendar_height="@dimen/dp_35"
                    app:calendar_padding="3dp"
                    android:padding="@dimen/dp_8"
                    app:month_view="com.bonlala.fitalent.calendar.CusSimpleMonthView"
                    app:week_view="com.bonlala.fitalent.calendar.CusSimpleWeekView"
                    app:other_month_text_color="#e1e1e1"
                    app:month_view_show_mode="mode_only_current"
                    app:current_month_text_color="#101D37"
                    app:selected_theme_color="#E7E8EB"
                    app:scheme_text_color="@color/white"
                    app:current_day_text_color="#90000000"
                    app:year_view_day_text_size="9sp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </LinearLayout>
    </com.hjq.shape.layout.ShapeLinearLayout>
</LinearLayout>