<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/dialogBorderTv"
        app:shape_strokeWidth="1dp"
        app:shape_strokeColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shape_radius="8dp"
        android:layout_marginTop="20dp"
        app:shape_solidColor="#E8E9ED"
        android:layout_width="80dp"
        android:layout_height="50dp"/>

    <com.bonlala.widget.view.StringScrollPicker
        android:id="@+id/dialogStringPicker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="80dp"
        app:spv_max_text_size="20sp"
        app:spv_min_text_size="17sp"
        android:layout_height="160dp"/>


    <TextView
        android:id="@+id/dialogUnitTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="cm"
        android:layout_marginTop="20dp"
        android:padding="@dimen/dp_0_5"
        app:layout_constraintLeft_toRightOf="@id/dialogStringPicker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>