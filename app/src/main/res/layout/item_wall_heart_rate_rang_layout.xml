    <com.hjq.shape.layout.ShapeConstraintLayout
        android:id="@+id/hrMaxHrLayout"
        android:layout_width="match_parent"
        android:padding="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_max_hr"
            android:textColor="#ff141418"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



        <ImageView
            android:id="@+id/backIg1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gray_right_back"/>



        <TextView
            android:id="@+id/hrMaxHeartValueTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="220bpm"
            android:textColor="#ff97979f"
            android:textSize="14sp"
            android:layout_marginEnd="@dimen/dp_5"
            app:layout_constraintRight_toLeftOf="@id/backIg1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </com.hjq.shape.layout.ShapeConstraintLayout>

