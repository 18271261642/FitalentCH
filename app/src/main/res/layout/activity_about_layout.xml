<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/string_about"
        app:lineVisible="true"
        app:leftIcon="@drawable/ic_black_back"
        app:titleColor="#000000" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_80"
        android:src="@mipmap/ic_logo_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FITalent"
        android:textColor="#ff181b23"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/aboutVersionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0.1"
        android:textColor="#ff3a3b3d"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_gravity="center"/>


    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_solidColor="@color/white"
        android:layout_marginTop="@dimen/dp_15"
        app:shape_radius="@dimen/dp_10"
        android:padding="@dimen/dp_5"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/privacyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_agreement_tips"
                android:textColor="#ff000000"
                android:textSize="16sp"
                android:padding="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/ic_gray_right_back"/>
        </LinearLayout>
        <View
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:background="#D3D3D3"/>
        <LinearLayout
            android:id="@+id/userAgreementLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_agreement_tips"
                android:textColor="#ff000000"
                android:textSize="16sp"
                android:padding="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/ic_gray_right_back"/>
        </LinearLayout>

    </com.hjq.shape.layout.ShapeLinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="广西奔啦啦智能科技有限公司"
        android:textColor="#ffafafaf"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guangxi Million Concept BHL Co.,Ltd.
Rights Reservrd"
        android:textColor="#ffafafaf"
        android:textSize="12sp"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"/>
</LinearLayout>