<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_8"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemRecordWatchLayout"
        android:padding="@dimen/dp_10">


        <ImageView
            android:id="@+id/itemSportTypeImg"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_5"
            android:src="@mipmap/ic_sport_walk"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/itemTempMiddleView"
            android:layout_width="1dp"
            android:layout_height="2dp"
            app:layout_constraintBottom_toBottomOf="@id/itemSportTypeImg"
            app:layout_constraintLeft_toRightOf="@id/itemSportTypeImg"
            app:layout_constraintTop_toTopOf="@id/itemSportTypeImg" />

        <TextView
            android:id="@+id/itemExerciseTypeNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="Walk"
            android:textColor="#ff000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/itemTempMiddleView"
            app:layout_constraintLeft_toRightOf="@id/itemSportTypeImg"
            app:layout_constraintTop_toTopOf="@id/itemSportTypeImg" />


        <TextView
            android:id="@+id/itemExerciseStartTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="11:36:10~11:41:13"
            android:textColor="#ff97979f"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/itemSportTypeImg"
            app:layout_constraintLeft_toRightOf="@id/itemSportTypeImg"
            app:layout_constraintTop_toBottomOf="@id/itemTempMiddleView" />

        <ImageView
            android:id="@+id/itemSportTempBackImg"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/ic_gray_right_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/itemSportTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="00:05:03"
            android:textColor="#ff000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/itemSportTempBackImg"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--心率带的布局-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/itemHrBeltTitleLayout"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">


        <ImageView
            android:id="@+id/itemHrSportTypeImg"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_5"
            android:src="@mipmap/ic_sport_walk"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/itemHrTempMiddleView"
            android:layout_width="1dp"
            android:layout_height="2dp"
            app:layout_constraintBottom_toBottomOf="@id/itemHrSportTypeImg"
            app:layout_constraintLeft_toRightOf="@id/itemHrSportTypeImg"
            app:layout_constraintTop_toTopOf="@id/itemHrSportTypeImg" />

        <TextView
            android:id="@+id/itemHrExerciseTypeNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="Walk"
            android:textColor="#ff000000"
            android:textSize="16sp"
            android:maxLength="10"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintBottom_toTopOf="@id/itemHrTempMiddleView"
            app:layout_constraintLeft_toRightOf="@id/itemHrTempMiddleView"
            app:layout_constraintTop_toTopOf="@id/itemHrSportTypeImg" />


        <TextView
            android:id="@+id/itemHrTypeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="普通计时"
            android:textColor="#ff97979f"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/itemHrSportTypeImg"
            app:layout_constraintLeft_toRightOf="@id/itemHrSportTypeImg"
            app:layout_constraintTop_toBottomOf="@id/itemHrTempMiddleView" />

        <ImageView
            android:id="@+id/itemHrSportTempBackImg"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/ic_gray_right_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/itemTempRightImg"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/itemHrSportTempBackImg"
            app:layout_constraintTop_toTopOf="@+id/itemHrSportTempBackImg"
            app:layout_constraintRight_toLeftOf="@+id/itemHrSportTempBackImg"/>

        <TextView
            android:id="@+id/itemHrSportTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="00:05:03"
            android:textColor="#ff000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/itemTempRightImg"
            app:layout_constraintRight_toLeftOf="@+id/itemHrSportTempBackImg"
            app:layout_constraintTop_toTopOf="@+id/itemHrSportTempBackImg" />


        <TextView
            app:layout_constraintTop_toBottomOf="@+id/itemHrSportTempBackImg"
            app:layout_constraintRight_toLeftOf="@+id/itemTempRightImg"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:36:10~11:41:13"
            android:textColor="#ff97979f"
            android:textSize="12sp"
            android:id="@+id/itemHrSportStartEndTimeTv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/itemExerciseTypeRy"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">


            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/dp_5"
                app:shape_radius="@dimen/dp_5"
                app:shape_solidColor="#F7F7F9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textColor="#ff97979f"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/itemExerciseDistanceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999.99"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />

            </com.hjq.shape.layout.ShapeLinearLayout>

            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/dp_5"
                app:shape_radius="@dimen/dp_5"
                app:shape_solidColor="#F7F7F9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consume"
                    android:textColor="#ff97979f"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/itemExerciseKcalTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999.99"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />

            </com.hjq.shape.layout.ShapeLinearLayout>

            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/dp_5"
                app:shape_radius="@dimen/dp_5"
                app:shape_solidColor="#F7F7F9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step count"
                    android:textColor="#ff97979f"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/itemExerciseStepTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999.99"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />

            </com.hjq.shape.layout.ShapeLinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">


            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/dp_5"
                app:shape_radius="@dimen/dp_5"
                app:shape_solidColor="#F7F7F9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avg HR"
                    android:textColor="#ff97979f"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/itemExerciseAvgHrTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="168"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />

            </com.hjq.shape.layout.ShapeLinearLayout>

            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:orientation="vertical"
                android:padding="@dimen/dp_5"
                app:shape_radius="@dimen/dp_5"
                app:shape_solidColor="#F7F7F9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pace"
                    android:textColor="#ff97979f"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/itemExercisePaceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="68'20''"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />

            </com.hjq.shape.layout.ShapeLinearLayout>

            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:orientation="vertical"
                android:padding="@dimen/dp_5"
                app:shape_radius="@dimen/dp_5"
                app:shape_solidColor="#F7F7F9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed"
                    android:textColor="#ff97979f"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/itemExerciseSpeedTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999.99"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />

            </com.hjq.shape.layout.ShapeLinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>